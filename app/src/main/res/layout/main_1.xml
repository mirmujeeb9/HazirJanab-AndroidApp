<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Login"
        android:textSize="28dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogin"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Welcome"
        android:textSize="22dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvLoginMsgPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWelcome"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Please login to your account"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLoginMsgPrompt"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:padding="10dp"
        android:background="@drawable/placeholder_grey_roundcorners"
        android:hint="Email"
        android:textColorHint="#626263"
        android:textSize="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#a9a9a9">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"
            android:background="@drawable/placeholder_grey_roundcorners"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#626263"
            android:textSize="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilPassword"
        android:layout_marginHorizontal="10dp"
        android:gravity="right|center"
        android:fontFamily="@font/poppins_regular"
        android:text="Forgot Password?"
        android:textSize="14dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvForgotPassword"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Login"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/placeholder_grey_roundcorners"
        android:backgroundTint="#161B21"/>

    <TextView
        android:id="@+id/tvOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnLogin"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:text="~OR~"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tvSkipandContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOR"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:text="Skip &amp; Continue"
        android:textSize="18dp"/>


    <TextView
        android:id="@+id/tvNoAccout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSignup"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:text="Don't have an account?"
        android:textSize="14dp"
        android:textColor="#AEAEAE"/>

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:text="Signup?"
        android:textSize="16dp"/>







</RelativeLayout>